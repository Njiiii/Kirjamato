        <Label Content="Käyttäjätunnus" HorizontalAlignment="Left" Margin="260,233,0,0" VerticalAlignment="Top" Height="27" Width="108"/>
        <Label Content="Salasana" HorizontalAlignment="Left" Margin="260,274,0,0" VerticalAlignment="Top" Width="108"/>

        <Button x:Name="LoginButton" Content="Kirjaudu sisään" HorizontalAlignment="Left" Margin="440,320,0,0" VerticalAlignment="Top" Width="120" Click="LoginButton_Click"/>
        <Button x:Name="NewUserButton" Content="Luo uusi käyttäjä" HorizontalAlignment="Left" Margin="440,360,0,0" VerticalAlignment="Top" Width="120" Click="NewUserButton_Click"/>

    </Grid>
</Window>
