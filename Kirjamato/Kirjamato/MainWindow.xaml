        xmlns:local="clr-namespace:Kirjamato"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>

        <TextBlock  HorizontalAlignment="Center" Margin="366,119,352,0" TextWrapping="Wrap" Text="LOGO TÄHÄN" VerticalAlignment="Top"/>
   
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Left" Margin="400,280,0,0" VerticalAlignment="Top" Width="160" Height="20"/>
